<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_gap">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cracked"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="52sp"
        android:textStyle="bold"
        android:textColor="#d31e1e" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/premium_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_gap"
                android:text="Premium ($2.99)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/premium_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_gap_4x"
                android:layout_marginRight="@dimen/default_gap_4x"
                android:layout_marginTop="@dimen/default_gap"
                android:text="Block typing alert\nBlock presence from Chat\nUnlimited groups\nRemove Ads"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_gap"
                android:background="@drawable/aa_blank"
                android:minHeight="35dp"
                android:minWidth="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/buy"
                android:visibility="gone" />

            <TextView
                android:id="@+id/deluxe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_gap_4x"
                android:text="Deluxe ($9.99)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/deluxe_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_gap_4x"
                android:layout_marginRight="@dimen/default_gap_4x"
                android:layout_marginTop="@dimen/default_gap"
                android:text="Every Premium Feature\nStealth Viewing - snaps appear as unviewed\nGod mode - users can&apos;t save your snaps"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/deluxe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_gap"
                android:background="@drawable/aa_blank"
                android:minHeight="35dp"
                android:minWidth="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/buy"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>